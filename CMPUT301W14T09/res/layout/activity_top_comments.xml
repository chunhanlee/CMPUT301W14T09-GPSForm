<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TopCommentsActivity" >

     <ListView
         android:id="@+id/CounterList"
         android:layout_width="fill_parent"
         android:layout_height="170dp"
         android:layout_alignRight="@+id/button2"
         android:layout_centerVertical="true"
         android:layout_weight="1"
         android:scrollbars="vertical" >
     </ListView>

     <Button
         android:id="@+id/button3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/CounterList"
         android:layout_below="@+id/CounterList"
         android:layout_marginTop="21dp"
         android:text="Delete User" />

     <Button
         android:id="@+id/locationbutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/button3"
         android:layout_toRightOf="@+id/favorite"
         android:text="Location(Test)" />

     <Spinner
         android:id="@+id/spinner1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/CounterList"
         android:layout_alignParentLeft="true" />

     <Button
         android:id="@+id/favorite"
         android:layout_width="140dp"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:text="Favorites" />

     <Button
         android:id="@+id/comment"
         android:layout_width="140dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/favorite"
         android:layout_alignBottom="@+id/favorite"
         android:layout_toRightOf="@+id/favorite"
         android:onClick="popUp"
         android:text="Comment" />

</RelativeLayout>
